# ====================================
# 페이퍼 트레이딩 설정
# ====================================

# Upbit API 키 (읽기 전용으로도 가능)
# 페이퍼 트레이딩에서는 실제 거래하지 않으므로 더미값도 가능
UPBIT_ACCESS_KEY=dummy_access_key_for_paper_trading
UPBIT_SECRET_KEY=dummy_secret_key_for_paper_trading

# 거래할 마켓
UPBIT_MARKET=KRW-BTC

# =====================================
# 가중 복합 전략 파라미터 (최적값)
# =====================================
STRATEGY_NAME=weighted_combined

# RSI 파라미터
RSI_WINDOW=14
RSI_MA_WINDOW=50
RSI_OVERSOLD=30
RSI_OVERBOUGHT=70

# MA Crossover 파라미터
MA_SHORT_WINDOW=14
MA_LONG_WINDOW=20
MA_ATR_THRESHOLD=0.02

# 가중치 (최적값)
WEIGHTED_RSI_WEIGHT=0.3
WEIGHTED_MA_WEIGHT=0.7

# =====================================
# 리스크 관리 (보수적 설정)
# =====================================
RISK_STOP_LOSS_PCT=-5.0
RISK_TAKE_PROFIT_PCT=10.0
RISK_MAX_DAILY_LOSS_PCT=3.0
RISK_MAX_POSITION_PCT=5.0
RISK_MAX_OPEN_POSITIONS=1
RISK_MIN_BALANCE_KRW=10000

# =====================================
# 페이퍼 트레이딩 모드 (필수!)
# =====================================
DRY_RUN=true

# 초기 시뮬레이션 잔고
PAPER_INITIAL_BALANCE=1000000

# 폴링 간격 (60초 = 1분마다 체크)
POLL_INTERVAL=60

# 캔들 데이터 개수
CANDLE_COUNT=200
CANDLE_UNIT=60

# =====================================
# 로깅
# =====================================
LOG_LEVEL=INFO
